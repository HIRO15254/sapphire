{
  "name": "sapphire",
  "version": "1.2.0",
  "private": true,
  "type": "module",
  "scripts": {
    "prebuild": "node scripts/generate-version.js",
    "build": "bun run db:migrate && next build",
    "check": "biome check .",
    "check:unsafe": "biome check --write --unsafe .",
    "check:write": "biome check --write .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run src/server/db/migrate.ts",
    "db:migrate:test": "cross-env DATABASE_URL=postgresql://postgres:postgres@localhost:5432/sapphire_test bun run src/server/db/migrate.ts",
    "db:migrate:all": "bun run db:migrate && bun run db:migrate:test",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run src/server/db/seed.ts",
    "db:reset": "bun run src/server/db/reset.ts",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:logs": "docker compose logs -f postgres",
    "dev": "next dev --turbo",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "preview": "next build && next start",
    "start": "next start",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest --coverage",
    "test:e2e": "bun run db:migrate:test playwright test",
    "test:e2e:ui": "playwright test --ui",
    "typecheck": "tsc --noEmit",
    "webhook:linear": "bun run scripts/linear-webhook-server.ts"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^1.7.2",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@mantine/charts": "^8.3.10",
    "@mantine/core": "^8.3.10",
    "@mantine/dates": "^8.3.10",
    "@mantine/form": "^8.3.10",
    "@mantine/hooks": "^8.3.10",
    "@mantine/notifications": "^8.3.10",
    "@mantine/tiptap": "^8.3.10",
    "@t3-oss/env-nextjs": "^0.12.0",
    "@tabler/icons-react": "^3.36.0",
    "@tanstack/react-query": "^5.69.0",
    "@tiptap/extension-bubble-menu": "^3.15.3",
    "@tiptap/extension-highlight": "^3.13.0",
    "@tiptap/extension-link": "^3.13.0",
    "@tiptap/extension-placeholder": "^3.15.3",
    "@tiptap/react": "^3.13.0",
    "@tiptap/starter-kit": "^3.13.0",
    "@trpc/client": "^11.0.0",
    "@trpc/react-query": "^11.0.0",
    "@trpc/server": "^11.0.0",
    "bcrypt": "^6.0.0",
    "dayjs": "^1.11.19",
    "drizzle-orm": "^0.41.0",
    "mantine-form-zod-resolver": "^1.3.0",
    "next": "^15.2.3",
    "next-auth": "5.0.0-beta.25",
    "postgres": "^3.4.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "recharts": "2",
    "server-only": "^0.0.1",
    "superjson": "^2.2.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@playwright/test": "^1.57.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.1",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^20.14.10",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.15",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.30.5",
    "jsdom": "^27.3.0",
    "tsx": "^4.21.0",
    "typescript": "^5.8.2",
    "vitest": "^4.0.15"
  },
  "ct3aMetadata": {
    "initVersion": "7.40.0"
  }
}
