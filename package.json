{
  "name": "mantttine_vibe_template",
  "version": "1.0.0",
  "description": "Spec-driven development template optimized for GitHub Spec Kit and Claude Code. Modern full-stack starter with Next.js 15, tRPC, Drizzle ORM, and Mantine v8",
  "keywords": [
    "spec-driven-development",
    "spec-kit",
    "claude-code",
    "llm-development",
    "ai-assisted-coding",
    "nextjs",
    "react",
    "typescript",
    "trpc",
    "drizzle-orm",
    "mantine",
    "postgresql",
    "template",
    "starter",
    "fullstack",
    "pwa"
  ],
  "author": "Mantine Vibe Template Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/mantttine_vibe_template"
  },
  "bugs": {
    "url": "https://github.com/your-username/mantttine_vibe_template/issues"
  },
  "homepage": "https://github.com/your-username/mantttine_vibe_template#readme",
  "private": false,
  "type": "module",
  "scripts": {
    "build": "next build",
    "check": "biome check .",
    "check:unsafe": "biome check --write --unsafe .",
    "check:write": "biome check --write .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:push:test": "cross-env DATABASE_URL=\"postgresql://postgres:postgres@localhost:5432/sapphire_test\" SKIP_ENV_VALIDATION=true drizzle-kit push",
    "db:push:all": "bun run db:push && bun run db:push:test",
    "db:studio": "drizzle-kit studio",
    "dev": "next dev --turbo",
    "preview": "bun run build && cross-env NODE_ENV=production bun run start",
    "start": "next start",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "cross-env SKIP_ENV_VALIDATION=true playwright test",
    "test:e2e:ui": "cross-env SKIP_ENV_VALIDATION=true playwright test --ui",
    "test:e2e:headed": "cross-env SKIP_ENV_VALIDATION=true playwright test --headed",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "format": "biome check --write .",
    "pwa:icons": "node scripts/generate-pwa-icons.js"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^1.11.0",
    "@mantine/core": "^8.3.5",
    "@mantine/dates": "^8.3.5",
    "@mantine/hooks": "^8.3.5",
    "@t3-oss/env-nextjs": "^0.12.0",
    "@tabler/icons-react": "^3.35.0",
    "@tanstack/react-query": "^5.90.5",
    "@trpc/client": "^11.6.0",
    "@trpc/react-query": "^11.6.0",
    "@trpc/server": "^11.6.0",
    "dayjs": "^1.11.18",
    "drizzle-orm": "^0.41.0",
    "next": "^15.5.6",
    "next-auth": "^5.0.0-beta.29",
    "postgres": "^3.4.7",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "server-only": "^0.0.1",
    "superjson": "^2.2.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.18.11",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/ui": "^2.1.9",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.30.6",
    "jsdom": "^25.0.1",
    "playwright": "^1.56.1",
    "sharp": "^0.34.4",
    "typescript": "^5.9.3",
    "vitest": "^2.1.9"
  },
  "ct3aMetadata": {
    "initVersion": "7.39.3"
  }
}
